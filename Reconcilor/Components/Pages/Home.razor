@page "/"

<PageTitle>Home</PageTitle>
@using System.Globalization

<RadzenCard class="rz-my-12 rz-mx-auto rz-p-1 rz-p-md-12 rz-base-lighter">
    <RadzenStack class="rz-p-0 rz-p-md-6 rz-p-lg-12">
        <RadzenCard Variant="Variant.Outlined">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0.5rem" Wrap="FlexWrap.Wrap">
                <RadzenCheckBox @bind-Value="@annotation" Name="Cu Grade"></RadzenCheckBox>
                <RadzenLabel Text="Cu Grade" Component="annotation" />
            </RadzenStack>
        </RadzenCard>

        <RadzenChart>
            <RadzenLineSeries Smooth="true" Data="@revenue2023" CategoryProperty="Date" Title="2023" ValueProperty="Revenue" RenderingOrder="1">
                <RadzenSeriesAnnotation Visible="@annotation" TItem="DataItem" Data="@revenue2023[7]" OffsetY="-16" Text="Cu Grade" />
                <RadzenMarkers MarkerType="MarkerType.Circle" />
            </RadzenLineSeries>
            <RadzenCategoryAxis Padding="20" />
            <RadzenValueAxis Formatter="@FormatAsUSD">
                <RadzenGridLines Visible="true" />
                <RadzenAxisTitle Text="Grade %" />
            </RadzenValueAxis>
        </RadzenChart>
    </RadzenStack>
</RadzenCard>


